{
  "manifest_version": 3,
  "name": "webkey",
  "description": "Visualizes keys as you press them, for screencast or presentation.",
  "version": "1.0",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "extension.js"
  },
  "action": {
    "default_icon": {
    } 
  },
  "web_accessible_resources": [{
    "matches": ["<all_urls>"],
    "resources": ["inject.js"]
  }],
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  }
}
